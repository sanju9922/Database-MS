  <title>Gadget Submission Form</title>
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
  <h1>Gadget Submission Form</h1>
  <form id="gadgetForm">
    <label for="gadgetType">Type of Gadget:</label>
    <select id="gadgetType">
      <option value="phone">Phone</option>
      <option value="laptop">Laptop</option>
      <option value="tablet">Tablet</option>
    </select>

    <label for="modelName">Model Name:</label>
    <input type="text" id="modelName" placeholder="Enter model name">

    <label for="submissionDate">Date of Submission:</label>
    <input type="date" id="submissionDate">

    <input type="submit" value="Submit">
  </form>

  <script src="script.js"></script>
</body>
